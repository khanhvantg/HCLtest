import java.util.*;

public class Main {
	public static void main(String[] args) throws Exception {
		//Your code here
		Scanner sc =  new Scanner(System.in);
		System.out.println("Enter an integer");
		Integer n;
		n= sc.nextInt();
		
		System.out.println("The binary equivalent of "+n+" is "+ Integer.toBinaryString(n));
		System.out.println("The hexadecimal equivalent of "+n+" is "+ Integer.toHexString(n));
		System.out.println("The octal equivalent of "+n+" is "+ Integer.toOctalString(n));
		
		byte b = (byte) num;
		Short s = (short) num;
		long l = n;
		Float f = (float) n;
		Double d = (double) n;
		System.out.println("Byte value of "+n+" is "+b);
		System.out.println("Short value of "+n+" is "+s);
		System.out.println("Long value of "+n+" is "+l);
		System.out.println("Float value of "+n+" is "+f);
		System.out.println("Double value of "+n+" is "+d);
	}
}
